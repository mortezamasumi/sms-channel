{
    "name": "mortezamasumi/sms-channel",
    "description": "An SMS channel helper package",
    "version": "v1.0",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "laravel",
        "sms"
    ],
    "homepage": "https://github.com/mortezamasumi/sms-channel",
    "authors": [
        {
            "name": "Morteza Masumi",
            "email": "morteza.masumi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.18.1",
        "pestphp/pest": "^3.5.1",
        "pestphp/pest-plugin-type-coverage": "^3.1",
        "phpstan/phpstan": "^1.12.7",
        "rector/rector": "^1.2.8",
        "symfony/var-dumper": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "Mortezamasumi\\SmsChannel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mortezamasumi\\SmsChannel\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mortezamasumi\\SmsChannel\\SmsChannelServiceProvider"
            ],
            "aliases": {
                "FilamentBase": "Mortezamasumi\\SmsChannel\\Facades\\SmsChannel"
            }
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
